datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt    DateTime? @default(now())
  firstName    String?
  id           String    @id @default(cuid())
  lastName     String?
  password     String
  phone_number BigInt
  roles        Json
  updatedAt    DateTime  @updatedAt
  username     String    @unique
}

model Transaction {
  createdAt DateTime
  id        String   @id @default(cuid())
  slug      String?
  updatedAt DateTime @updatedAt
}
